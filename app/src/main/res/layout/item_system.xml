<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white_255"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:id="@+id/knowledge_hierarchy_enter_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/knowledge_hierarchy_enter_iv"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_knowledge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_16"
                tools:text="开发环境" />

            <TextView
                android:id="@+id/tv_knowledge_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/finish"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                tools:text="Android Studio相关   gradle  官方发布" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
